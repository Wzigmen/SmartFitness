<Window x:Class="SmartFitness.SmartFitnessLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartFitness"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        Title="Smart-Fitness" Height="480" Width="665" WindowStartupLocation="CenterScreen" Background="#1e1e1e">
    <Grid Margin="0,0,0,-5">
        <!-- Фоновое изображение -->
        <Grid.Background>
            <ImageBrush ImageSource="/background2.png" Stretch="UniformToFill" Opacity="0.3" />
        </Grid.Background>

        <!-- Логотип -->
        <TextBlock Text="Smart Fitness" FontSize="36" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Center" Margin="0,33,0,352" FontFamily="Comic Sans MS" FontStyle="Italic"/>

        <!-- Логин -->
        <TextBlock Text="ЛОГИН" Foreground="White" FontSize="14" Margin="220,125,376,291" FontFamily="Comic Sans MS" RenderTransformOrigin="0.093,-0.002"/>

        <TextBox x:Name="Login" Width="210" Margin="0,146,0,264" HorizontalAlignment="Center" Background="#333" Foreground="White" BorderThickness="0" Padding="10" FontFamily="Comic Sans MS"/>

        <!-- Пароль -->
        <TextBlock Text="ПАРОЛЬ" Foreground="White" FontSize="14" Margin="220,185,368,227" FontFamily="Comic Sans MS"/>
        <PasswordBox x:Name="Password" Width="210" Margin="0,211,0,199" HorizontalAlignment="Center" Background="#333" Foreground="White" BorderThickness="0" Padding="10" FontFamily="Comic Sans MS" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>

        <Button Content="ВОЙТИ" FontSize="18"
        Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="220,271,220,115" FontFamily="Comic Sans MS" Click="Button_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Ссылка на регистрацию -->
        <TextBlock HorizontalAlignment="Left" Margin="226,351,0,59" Foreground="Gray" FontSize="14" FontFamily="Comic Sans MS">
            <Run Text="Нет аккаунта? "/>
            <Hyperlink Foreground="Gray" Cursor="Hand">Регистрация →</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
